<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_20">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="@dimen/actionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_10"
                android:gravity="left"
                android:text="@string/theme_color_select"
                android:textColor="@color/text_black"
                android:textSize="@dimen/bigger" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_10"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/theme_layout_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/theme_tv_1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/theme_color"
                        />
                    <CheckBox
                        android:id="@+id/theme_cb_1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:theme="@style/MyCheckBox"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/theme_layout_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/theme_tv_2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/theme_color_green"
                        />
                    <CheckBox
                        android:id="@+id/theme_cb_2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:theme="@style/MyCheckBox"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/theme_layout_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/theme_tv_3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/theme_color_orange"
                        />
                    <CheckBox
                        android:id="@+id/theme_cb_3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:theme="@style/MyCheckBox"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/theme_layout_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/theme_tv_4"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/theme_color_indigo"
                        />
                    <CheckBox
                        android:id="@+id/theme_cb_4"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:theme="@style/MyCheckBox"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme_layout_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/theme_tv_5"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/theme_color_red"
                        />
                    <CheckBox
                        android:id="@+id/theme_cb_5"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:theme="@style/MyCheckBox"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_10"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/theme_layout_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/theme_tv_6"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/theme_color_purple"
                        />
                    <CheckBox
                        android:id="@+id/theme_cb_6"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:theme="@style/MyCheckBox"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/theme_layout_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/theme_tv_7"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/theme_color_gray"
                        />
                    <CheckBox
                        android:id="@+id/theme_cb_7"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:theme="@style/MyCheckBox"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/theme_layout_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/theme_tv_8"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/theme_color_cyan"
                        />
                    <CheckBox
                        android:id="@+id/theme_cb_8"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:theme="@style/MyCheckBox"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/theme_layout_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/theme_tv_9"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/theme_color_teal"
                        />
                    <CheckBox
                        android:id="@+id/theme_cb_9"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:theme="@style/MyCheckBox"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme_layout_10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/theme_tv_10"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/theme_color_pink"
                        />
                    <CheckBox
                        android:id="@+id/theme_cb_10"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:theme="@style/MyCheckBox"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_10"
            android:gravity="left"
            android:text="@string/style_select"
            android:textColor="@color/text_black"
            android:textSize="@dimen/bigger" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/padding_10"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/style_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/padding_5"
                android:background="@drawable/none_blue_bg_selector"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/style_layout_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    >
                    <TextView
                        android:id="@+id/style_tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/style_classic"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/middle" />
                    <CheckBox
                        android:id="@+id/style_cb_1"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:theme="@style/MyCheckBox"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/style_layout_1"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/style1" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/style_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/padding_5"
                android:background="@drawable/none_blue_bg_selector"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/style_layout_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    >
                    <TextView
                        android:id="@+id/style_tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="@string/style_minimalist"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/middle" />
                    <CheckBox
                        android:id="@+id/style_cb_2"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:theme="@style/MyCheckBox"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/style_layout_2"
                    android:layout_centerInParent="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/style2" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>