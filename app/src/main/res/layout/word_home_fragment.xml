<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/word_study_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/word_study_book_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="@string/title_word_study"
            android:textColor="@color/text_black"
            android:textSize="@dimen/big" />
        <FrameLayout
            android:id="@+id/word_study_change_unit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:foreground="@drawable/framelayout_selector"
            android:layout_marginRight="@dimen/padding_5"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_subject"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/word_study_change_plan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/padding_7"
            android:foreground="@drawable/framelayout_selector"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_library_books"/>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ProgressBar
            android:id="@+id/study_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:max="100"
            android:progress="10"
            android:progressDrawable="@drawable/progress_bar_round_green"
            />
        <TextView
            android:id="@+id/word_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text_black"
            android:textSize="@dimen/small" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="13dp"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/word_study_new_word"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/border_shadow_gray_oval_selecter"
            android:gravity="center"
            android:text="@string/new_and_wrong"
            android:textColor="@color/text_black"
            android:layout_marginRight="@dimen/padding_10"
            android:textSize="@dimen/middle" />
        <TextView
            android:id="@+id/start_to_study"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/border_shadow_gray_oval_selecter"
            android:gravity="center"
            android:text="@string/word_start"
            android:textColor="@color/text_black"
            android:layout_marginLeft="@dimen/padding_7"
            android:textSize="@dimen/middle" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background" />

</LinearLayout>

