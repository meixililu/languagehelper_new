<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_10"
    android:background="@color/none"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notifi_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notifi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_7"
            android:lines="1"
            android:text="Name"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/middle" />

        <TextView
            android:id="@+id/notifi_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="轻松学英语"
            android:textColor="@color/text_black"
            android:textSize="@dimen/small" />

    </LinearLayout>

    <ImageView
        android:id="@+id/notifi_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_10"
        android:src="@drawable/ic_skip_previous_grey" />

    <ImageView
        android:id="@+id/notifi_action"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_7"
        android:layout_marginRight="@dimen/padding_10"
        android:src="@drawable/ic_play_grey" />

    <ImageView
        android:id="@+id/notifi_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_skip_next_grey" />

    <ImageView
        android:id="@+id/notifi_close"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_clear_gray" />
</LinearLayout>
