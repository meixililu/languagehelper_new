<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/voice_img"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_margin="@dimen/padding_10"
        app:srcCompat="@drawable/ic_volume_black"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:paddingTop="120dp"
        >

        <TextView
            android:id="@+id/word_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/bigxx" />
        <TextView
            android:id="@+id/word_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_15"
            android:gravity="center"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/bigger" />
        <TextView
            android:id="@+id/word_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/bigger" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingBottom="40dp"
        >
        <TextView
            android:id="@+id/recognize_know"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/big"
            android:text="@string/recognize_know"
            android:background="@drawable/green_btn_bg_selector"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/recognize_unknow"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/big"
            android:text="@string/recognize_unknow"
            android:background="@drawable/bg_btn_red_selector"
            />

    </LinearLayout>

</RelativeLayout>