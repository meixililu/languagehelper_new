<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="@dimen/actionBar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBarCircularIndetermininate"
                style="@style/CircularProgressWhite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/padding_10"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/selection_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:gravity="left"
            android:padding="@dimen/padding_10"
            android:text="选择你听到的内容"
            android:textColor="@color/text_black"
            android:textSize="@dimen/biggerx" />

        <RelativeLayout
            android:id="@+id/play_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="1dp"
            android:background="@drawable/border_shadow_gray_selecter"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_volume_black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/chinese_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:gravity="left"
            android:textColor="@color/gray"
            android:textSize="@dimen/middle" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/auto_wrap_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:animateLayoutChanges="true"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_10"
            app:alignContent="flex_start"
            app:alignItems="flex_start"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:showDivider="beginning|middle" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/auto_wrap_options"
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_10"
            app:alignContent="flex_start"
            app:alignItems="flex_start"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:showDivider="beginning|middle" />
    </LinearLayout>

    <TextView
        android:id="@+id/check_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_15"
        android:background="@drawable/border_shadow_gray_oval_selecter"
        android:gravity="center"
        android:padding="@dimen/padding_20"
        android:text="Check"
        android:textColor="@color/text_black"
        android:textSize="@dimen/big" />

</LinearLayout>


