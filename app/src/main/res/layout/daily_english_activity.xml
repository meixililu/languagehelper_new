<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_tint"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="@dimen/actionBar">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            >
            <ProgressBar
                android:id="@+id/progressBarCircularIndetermininate"
                style="@style/CircularProgressWhite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/padding_10"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/english_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_15"
                android:textSize="@dimen/bigx"
                android:textColor="@color/black"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/chinese_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:padding="@dimen/padding_10"
            android:gravity="left|bottom"
            android:textColor="@color/gray"
            android:textSize="@dimen/middle" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="@dimen/padding_10"
            android:background="@color/text_tint"
            >
            <TextView
                android:id="@+id/refresh_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_another_one"
                android:textColor="@color/text_grey1"
                android:textSize="@dimen/big"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/padding_5"
                />
            <TextView
                android:id="@+id/retry_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retry"
                android:textColor="@color/text_grey1"
                android:textSize="@dimen/big"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/padding_5"
                />
            <TextView
                android:id="@+id/prompt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt"
                android:textColor="@color/text_grey1"
                android:textSize="@dimen/big"
                android:layout_toLeftOf="@id/retry_tv"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/padding_15"
                />
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/auto_wrap_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/text_tint"
                android:paddingBottom="@dimen/padding_7"
                android:paddingLeft="@dimen/padding_5"
                app:alignItems="center"
                app:alignContent="flex_start"
                app:flexDirection="row"
                app:justifyContent="flex_start"
                app:showDivider="beginning|middle"
                app:flexWrap="wrap"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/padding_5"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/start_btn_cover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="@drawable/framelayout_selector">

            <TextView
                android:id="@+id/start_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="?attr/colorPrimary"
                android:gravity="center"
                android:text="Play"
                android:textColor="@color/white"
                android:textSize="@dimen/big"
                android:textStyle="bold" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>


