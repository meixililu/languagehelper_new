<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:expandedTitleTextAppearance="@style/TextAppearance.ExpandedTitle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                android:background="@color/white"
                app:layout_collapseParallaxMultiplier="1"
                >
                <RelativeLayout
                    android:id="@+id/item_img_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/item_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            fresco:viewAspectRatio="1"
                            fresco:placeholderImageScaleType="fitCenter"
                            fresco:actualImageScaleType="focusCrop"
                            fresco:placeholderImage="@color/text_tint"
                            />
                        <ImageView
                            android:id="@+id/img_cover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@color/none_thin"
                            />
                        <FrameLayout
                            android:id="@+id/back_btn"
                            android:layout_width="80dp"
                            android:layout_height="80dp">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="bottom|right"
                                android:layout_marginRight="@dimen/padding_30"
                                android:layout_marginBottom="@dimen/padding_20"
                                android:layout_marginTop="@dimen/padding_30"
                                android:layout_marginLeft="@dimen/padding_20"
                                android:src="@drawable/ic_arrow_back"
                                />
                        </FrameLayout>

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/ad_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="80dp"
                        android:padding="@dimen/padding_10"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/ad_img"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                fresco:viewAspectRatio="1.5"
                                fresco:placeholderImageScaleType="fitCenter"
                                fresco:actualImageScaleType="focusCrop"
                                fresco:placeholderImage="@color/text_tint"
                                />
                            <ImageView
                                android:id="@+id/ad_close"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right|top"
                                android:src="@drawable/clear_btn"
                                />
                        </FrameLayout>
                        <TextView
                            android:id="@+id/ad_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_7"
                            android:textSize="@dimen/middle"
                            android:textColor="@color/text_black"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/ad_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_7"
                            android:layout_marginLeft="@dimen/padding_20"
                            android:layout_marginRight="@dimen/padding_20"
                            android:textSize="@dimen/middle"
                            android:textColor="@color/white"
                            android:padding="@dimen/padding_10"
                            android:background="@drawable/main_ic_seekbar_thumb_orange"
                            android:gravity="center"
                            android:text="查看详情"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/player_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_img_layout"
                    app:layout_collapseMode="pin"
                    android:layout_marginBottom="@dimen/padding_15"
                    android:layout_marginTop="@dimen/padding_15"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:id="@+id/play_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/player_play_selector"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_below="@id/player_layout"
                    android:layout_height="7dp"
                    android:background="@color/text_tint1"
                    />

            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/padding_10"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/announcer_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@color/text_tint1"
                />
            <TextView
                android:id="@+id/album_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/announcer_icon"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/text_black"
                android:textSize="@dimen/bigger"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/item_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/xmly_fm"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_toRightOf="@id/announcer_icon"
                android:layout_below="@id/album_title"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/small" />
            <TextView
                android:id="@+id/announcer_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_sign"
                android:layout_below="@id/album_title"
                android:maxLines="1"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/small"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/source_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/album_title"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:text="dafdsf"
                android:maxLines="1"
                android:gravity="left"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/small" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_tint2"
            />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true" >
        <LinearLayout
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            >

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>
