<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/contentbg"
    android:orientation="vertical" >

    <androidx.appcompat.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="@dimen/actionBar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/contentbg"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/contentbg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding_7"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="我们的目标"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/big" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_15" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/rounded_round"
                            android:gravity="center"
                            android:text="学英语"
                            android:textColor="@color/green_500"
                            android:textSize="@dimen/big" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_10"
                            android:gravity="center"
                            android:text="干革命"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/middle" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:paddingBottom="27dp"
                        android:text=">"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/biggerx" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_15" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/rounded_round"
                            android:gravity="center"
                            android:text="点广告"
                            android:textColor="@color/green_500"
                            android:textSize="@dimen/big" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_10"
                            android:gravity="center"
                            android:text="小米加步枪"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/middle" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:paddingBottom="27dp"
                        android:text=">"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/biggerx" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_15" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/rounded_round"
                            android:gravity="center"
                            android:text="领现金"
                            android:textColor="@color/green_500"
                            android:textSize="@dimen/big" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_10"
                            android:gravity="center"
                            android:text="打土豪分田地"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/middle" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_7"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding_7"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="现阶段大家点广告产生的收益用途"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/big" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_15" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/rounded_round"
                            android:gravity="center"
                            android:text="广告收益"
                            android:textColor="@color/green_500"
                            android:textSize="@dimen/middle" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text=">"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/biggerx" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_15" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/rounded_round"
                            android:gravity="center"
                            android:text="招人添加内容"
                            android:textColor="@color/green_500"
                            android:textSize="@dimen/middle" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text=">"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/biggerx" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_15" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/rounded_round"
                            android:gravity="center"
                            android:text="大家一起学"
                            android:textColor="@color/green_500"
                            android:textSize="@dimen/middle" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding_7" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="我们的理念"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/big" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_15" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/rounded_round"
                            android:gravity="center"
                            android:text="极简"
                            android:textColor="@color/green_500"
                            android:textSize="@dimen/middle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_15" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/rounded_round"
                            android:gravity="center"
                            android:text="易用"
                            android:textColor="@color/green_500"
                            android:textSize="@dimen/middle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_15" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/rounded_round"
                            android:gravity="center"
                            android:text="有趣"
                            android:textColor="@color/green_500"
                            android:textSize="@dimen/middle" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/white"
                android:paddingBottom="@dimen/padding_7"
                android:paddingLeft="@dimen/padding_15"
                android:paddingRight="@dimen/padding_7"
                android:paddingTop="@dimen/padding_7"
                android:text="@string/getfans_1"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/middle"
                android:visibility="gone" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/white"
                android:paddingBottom="@dimen/padding_7"
                android:paddingLeft="@dimen/padding_15"
                android:paddingRight="@dimen/padding_7"
                android:paddingTop="@dimen/padding_7"
                android:text="@string/click_ad_prompt"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/middle"
                android:visibility="gone" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/white"
                android:paddingBottom="@dimen/padding_7"
                android:paddingLeft="@dimen/padding_15"
                android:paddingRight="@dimen/padding_7"
                android:paddingTop="@dimen/padding_7"
                android:text="@string/getfans_3"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/middle" />

            <TextView
                android:id="@+id/mail_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_15"
                android:paddingLeft="@dimen/padding_15"
                android:paddingRight="@dimen/padding_7"
                android:paddingTop="@dimen/padding_15"
                android:text="@string/getfans_4"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/middle" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>