<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cover"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_shadow"
    android:elevation="10dp"
    android:orientation="vertical" >
    <FrameLayout
        android:id="@+id/title_layout"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:foreground="@drawable/framelayout_selector"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        >
        <TextView
            android:id="@+id/dic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:gravity="left"
            android:textColor="@color/text_black"
            android:textSize="@dimen/biggerx" />

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_toRightOf="@id/dic_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_15"
            android:src="@drawable/play_btn_d"
            />
        <CheckBox
            android:id="@+id/collected_cb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/collected_uncollected_selector"
            android:button="@null"
            android:focusable="false" />
    </RelativeLayout>
    </FrameLayout>
    <View
        android:layout_width="240dp"
        android:layout_height="1px"
        android:background="@color/contentbg" />
    <RelativeLayout
        android:id="@+id/dic_result_layout"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@color/none">
        <TextView
            android:id="@+id/des_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="7dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/big" />
    </RelativeLayout>
</LinearLayout>