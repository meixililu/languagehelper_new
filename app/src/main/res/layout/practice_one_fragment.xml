<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    android:background="@color/app_background"
    >
	
    <TextView
        android:id="@+id/questiontv" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
    	android:textColor="@color/text_dark"
    	android:shadowDx="0.3"
        android:shadowDy="0.3"
        android:shadowRadius="0.3"
        android:shadowColor="@color/text_dark"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_10"
    	android:textSize="@dimen/bigger"
        />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:layout_marginTop="@dimen/padding_15"
            >
            <CheckBox 
                android:id="@+id/select_answer1" 
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
		        android:layout_marginLeft="@dimen/padding_10"
		        android:layout_marginRight="@dimen/padding_5"
		        android:gravity="center"
		    	android:text="a boy"
		    	android:textColor="@drawable/txt_color_darkgray_white_selector"
		    	android:shadowDx="0.3"
		        android:shadowDy="0.3"
		        android:shadowRadius="0.3"
		        android:shadowColor="@color/text_dark"
		    	android:textSize="@dimen/bigest"
		    	android:background="@drawable/cb_white_blue_selector"
		    	android:button="@null"
		        />
            <CheckBox 
                android:id="@+id/select_answer2"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
		        android:layout_marginLeft="@dimen/padding_5"
		        android:layout_marginRight="@dimen/padding_10"
		        android:gravity="center"
		    	android:text="a boy"
		    	android:textColor="@drawable/txt_color_darkgray_white_selector"
		    	android:shadowDx="0.3"
		        android:shadowDy="0.3"
		        android:shadowRadius="0.3"
		        android:shadowColor="@color/text_dark"
		    	android:textSize="@dimen/bigest"
		    	android:background="@drawable/cb_white_blue_selector"
		    	android:button="@null"
		        />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:layout_marginTop="@dimen/padding_10"
	        android:layout_marginBottom="@dimen/padding_5"
            >
            <CheckBox 
                android:id="@+id/select_answer3"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
		        android:layout_marginLeft="@dimen/padding_10"
		        android:layout_marginRight="@dimen/padding_5"
		        android:gravity="center"
		    	android:text="a boy"
		    	android:textColor="@drawable/txt_color_darkgray_white_selector"
		    	android:shadowDx="0.3"
		        android:shadowDy="0.3"
		        android:shadowRadius="0.3"
		        android:shadowColor="@color/text_dark"
		    	android:textSize="@dimen/bigest"
		    	android:background="@drawable/cb_white_blue_selector"
		    	android:button="@null"
		        />
            <CheckBox 
                android:id="@+id/select_answer4"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
		        android:layout_marginLeft="@dimen/padding_5"
		        android:layout_marginRight="@dimen/padding_10"
		        android:gravity="center"
		    	android:text="a boy"
		    	android:textColor="@drawable/txt_color_darkgray_white_selector"
		    	android:shadowDx="0.3"
		        android:shadowDy="0.3"
		        android:shadowRadius="0.3"
		        android:shadowColor="@color/text_dark"
		    	android:textSize="@dimen/bigest"
		    	android:background="@drawable/cb_white_blue_selector"
		    	android:button="@null"
		        />
        </LinearLayout>
    </LinearLayout>

	<FrameLayout
		android:id="@+id/check_btn_cover"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:foreground="@color/framelayout_selector"
		android:layout_margin="@dimen/padding_5">
		<TextView
			android:id="@+id/check_btn"
			android:layout_width="match_parent"
			android:layout_height="47dp"
			android:background="@color/green"
			android:textColor="@color/white"
			android:gravity="center"
			android:textStyle="bold"
			android:textSize="@dimen/big"
			android:text="@string/practice_check"
			/>
	</FrameLayout>

</LinearLayout>
