<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_cover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/framelayout_selector"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:orientation="horizontal" >
		<FrameLayout
			android:id="@+id/list_item_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			>
			<com.facebook.drawee.view.SimpleDraweeView
				android:id="@+id/list_item_img"
				android:layout_width="80dp"
				android:layout_height="80dp"
				fresco:placeholderImageScaleType="fitCenter"
				fresco:actualImageScaleType="focusCrop"
				fresco:placeholderImage="@color/text_tint"
				/>
			<ImageView
				android:id="@+id/music_play_img"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_gravity="center"
				android:src="@drawable/jz_play_normal"/>
		</FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/list_item_layout"
			android:layout_marginRight="@dimen/padding_5"
            android:orientation="vertical"
			android:background="@color/white"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
                android:maxLines="2"
				android:background="@color/white"
				android:layout_marginBottom="@dimen/padding_7"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/bigger" />

			<TextView
				android:id="@+id/sub_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/title"
				android:maxLines="1"
				android:ellipsize="end"
				android:singleLine="true"
				android:layout_marginBottom="@dimen/padding_10"
				android:background="@color/white"
				android:textColor="@color/text_grey"
				android:textSize="@dimen/middle" />

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
				android:layout_below="@id/sub_title"
				android:layout_alignParentBottom="true"
                android:orientation="horizontal"
				android:background="@color/white"
                >
                <TextView
	                android:id="@+id/source_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
					android:background="@color/white"
					android:maxLines="1"
	                android:gravity="left"
	                android:textColor="@color/text_grey1"
	                android:textSize="@dimen/small" />
                <TextView
	                android:id="@+id/type_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
					android:maxLines="1"
					android:background="@color/white"
	                android:layout_marginLeft="@dimen/padding_20"
	                android:gravity="left"
	                android:textColor="@color/text_grey1"
	                android:textSize="@dimen/small" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

	<FrameLayout
		android:id="@+id/ad_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/padding_margin"
		android:visibility="gone"
		/>
</FrameLayout>