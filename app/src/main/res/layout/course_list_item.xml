<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/course_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_5"
        android:background="@drawable/bg_btn_gray"
        android:foreground="@drawable/framelayout_selector">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/list_item_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/padding_20"
                fresco:actualImageScaleType="fitCenter"
                fresco:placeholderImage="@color/text_tint"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:roundedCornerRadius="25dp" />

            <TextView
                android:id="@+id/course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:text="听力课程"
                android:textColor="@color/text_black"
                android:textSize="@dimen/big" />

            <ProgressBar
                android:id="@+id/course_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="@dimen/padding_15"
                android:max="30"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar_round_green" />

        </LinearLayout>

    </FrameLayout>
</LinearLayout>
