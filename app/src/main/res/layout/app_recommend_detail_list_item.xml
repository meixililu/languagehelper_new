<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/layout_cover"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <com.messi.languagehelper.views.ProportionalImageView
            android:id="@+id/list_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/none_alpha"
            android:orientation="vertical"
            android:padding="@dimen/padding_7" >

            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:shadowColor="@color/white"
                android:shadowDx="0.3"
                android:shadowDy="0.3"
                android:textColor="@color/white"
                android:textSize="@dimen/biggerx"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/item_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="@dimen/middle" />
            <TextView
                android:id="@+id/item_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="@dimen/middle" />
        </LinearLayout>
    </FrameLayout>

    <com.gc.materialdesign.views.ButtonFlat
          android:id="@+id/download_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/app_lightblue"
           materialdesign:rippleSpeed="95"
          android:text="@string/download" 
          />

</LinearLayout>