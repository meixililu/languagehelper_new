<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_cover"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/framelayout_selector"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="80dp"
            android:layout_weight="1"
            android:orientation="vertical"
			android:background="@color/white"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="3"
				android:background="@color/white"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/bigger" />

			<fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
				android:id="@+id/videoplayer"
				android:layout_width="match_parent"
				android:layout_marginBottom="@dimen/padding_7"
				android:layout_marginTop="@dimen/padding_7"
				android:visibility="gone"
				android:layout_height="210dp"/>

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal"
				android:background="@color/white"
                >
                <TextView
	                android:id="@+id/source_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
					android:background="@color/white"
					android:maxLines="1"
	                android:gravity="left"
	                android:textColor="@color/text_grey1"
	                android:textSize="@dimen/small" />
                <TextView
	                android:id="@+id/type_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
					android:maxLines="1"
					android:background="@color/white"
	                android:layout_marginLeft="@dimen/padding_20"
	                android:gravity="left"
	                android:textColor="@color/text_grey1"
	                android:textSize="@dimen/small" />
                
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/list_item_img_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:background="@color/white"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/padding_5"
            android:orientation="vertical" >

			<com.facebook.drawee.view.SimpleDraweeView
				android:id="@+id/list_item_img"
				android:layout_width="105dp"
				android:layout_height="80dp"
				fresco:placeholderImageScaleType="fitCenter"
				fresco:actualImageScaleType="focusCrop"
				fresco:placeholderImage="@color/text_tint"
				/>

			<ImageView
				android:id="@+id/music_play_img"
				android:layout_width="38dp"
				android:layout_height="38dp"
				android:layout_gravity="center"
				android:src="@drawable/jc_click_play_selector"
				android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>

</FrameLayout>